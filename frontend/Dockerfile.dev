FROM node:20-alpine

WORKDIR /app

COPY package.json package-lock.json* ./
RUN npm ci

COPY . .

EXPOSE 3003

# node_modules is overwritten by volume; on first run (empty) run npm ci then next dev
CMD ["sh", "-c", "if [ ! -d node_modules/.bin ]; then echo '[docker-dev] Installing deps...'; npm ci; fi && exec npm run dev"]
